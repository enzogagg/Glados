{
  "comments": {
    "lineComment": "#",
    "blockComment": ["$$$", "$$$"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "(", "close": ")", "notIn": ["string", "comment"] },
    { "open": "[", "close": "]", "notIn": ["string", "comment"] },
    { "open": "{", "close": "}", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(principal|fonction|si|sinon|tantque|pour).*$",
    "decreaseIndentPattern": "^\\s*(fin|sinon).*$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*(principal|fonction|si|tantque|pour)",
      "end": "^\\s*fin"
    }
  }
}
